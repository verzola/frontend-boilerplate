{
  "private": true,
  "author": "Gustavo Verzola <verzola@gmail.com>",
  "name": "frontend-boilerplate",
  "version": "0.0.0-development",
  "scripts": {
    "build": "cross-env NODE_ENV=production node --no-deprecation node_modules/webpack/bin/webpack.js --color",
    "dev": "cross-env NODE_ENV=development node --no-deprecation node_modules/webpack/bin/webpack.js --color serve",
    "format": "prettier --write \"**/*.{js,json,scss,html,md}\"",
    "fix:css": "stylelint --fix 'src/scss/**/*.scss'",
    "fix:js": "eslint --fix src/js/**/*.js",
    "lint": "npm run -s lint:js && npm run -s lint:scss",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "stylelint \"src/scss/**/*.scss\"",
    "start": "npm run dev",
    "test": "npm run -s lint",
    "profile": "webpack --profile --json > stats.json",
    "shell": "docker-compose exec node bash",
    "prune": "docker-compose kill && docker-compose rm -f",
    "reset": "npm run prune && docker-compose up -d",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.11",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "imagemin-webpack-plugin": "^2.4.2",
    "jira-prepare-commit-msg": "^1.6.2",
    "lint-staged": "^12.1.2",
    "mini-css-extract-plugin": "^2.4.5",
    "normalize.css": "^8.0.1",
    "postcss-loader": "^6.2.0",
    "prettier": "2.4.1",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "semantic-release": "^18.0.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.0.0",
    "stylelint-webpack-plugin": "^3.1.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.64.3",
    "webpack-assets-manifest": "^5.0.6",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verzola/frontend-boilerplate.git"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
