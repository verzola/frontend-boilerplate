{
  "private": true,
  "author": "Gustavo Verzola <verzola@gmail.com>",
  "name": "frontend-boilerplate",
  "version": "0.0.0-development",
  "scripts": {
    "build": "cross-env NODE_ENV=production node --no-deprecation node_modules/webpack/bin/webpack.js --color",
    "dev": "cross-env NODE_ENV=development node --no-deprecation node_modules/webpack/bin/webpack.js --color serve",
    "format": "prettier --write \"**/*.{js,json,scss,html,md}\"",
    "fix:css": "stylelint --fix 'src/scss/**/*.scss'",
    "fix:js": "eslint --fix src/js/**/*.js",
    "lint": "npm run -s lint:js && npm run -s lint:scss",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "stylelint \"src/scss/**/*.scss\"",
    "start": "npm run dev",
    "test": "npm run -s lint",
    "profile": "webpack --profile --json > stats.json",
    "shell": "docker-compose exec node bash",
    "prune": "docker-compose kill && docker-compose rm -f",
    "reset": "npm run prune && docker-compose up -d",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.4",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "jira-prepare-commit-msg": "^1.6.1",
    "lint-staged": "^11.0.1",
    "mini-css-extract-plugin": "^2.1.0",
    "node-sass": "^6.0.1",
    "normalize.css": "^8.0.1",
    "postcss-loader": "^6.1.1",
    "prettier": "2.3.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.44.0",
    "webpack-assets-manifest": "^5.0.6",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "semantic-release": "^17.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verzola/frontend-boilerplate.git"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
